{
  "scripts": {
    "dev": "next dev -p ${PORT:-3000}",
    "build": "next build",
    "lint": "next lint",
    "serve": "serve --listen ${PORT:-3000} ${SERVE_DIR:-out}",
    "test": "jest --watch",
    "test:ci": "jest",
    "e2e": "start-server-and-test dev http://localhost:3000 \"cypress open --e2e\"",
    "e2e:ci": "start-server-and-test dev http://localhost:3000 \"cypress run --e2e\"",
    "all": "npm-run-all test:ci e2e:ci build"
  },
  "dependencies": {
    "next": "^13.4.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/node": "20.3.1",
    "@types/react": "18.2.13",
    "cypress": "^12.16.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "serve": "14.2.0",
    "start-server-and-test": "^2.0.0",
    "typescript": "5.1.3"
  },
  "engines": {
    "node": ">=20.3.1"
  }
}
